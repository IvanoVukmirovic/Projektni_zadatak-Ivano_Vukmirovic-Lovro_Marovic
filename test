#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

void igra(int polje[10][10]) {
    for (int i = 0; i < 10; i++) {
        for (int j = 0; j < 10; j++) {
            polje[i][j] = 0;
        }
    }

    srand(time(0));

    for (int i = 0; i < 20; i++) {
        int a = rand() % 10;
        int b = rand() % 10;
        if (polje[a][b] == 10) {
            i--;
        } else {
            polje[a][b] = 10;
        }
    }

    for (int i = 0; i < 10; i++) {
        for (int j = 0; j < 10; j++) {
            if (polje[i][j] == 10) {
                continue; 
            }
            int mineCount = 0;
            for (int x = -1; x <= 1; x++) {
                for (int y = -1; y <= 1; y++) {
                    if (x == 0 && y == 0) continue;
                    int ni = i + x;
                    int nj = j + y;
                    if (ni >= 0 && ni < 10 && nj >= 0 && nj < 10 && polje[ni][nj] == 10) {
                        mineCount++;
                    }
                }
            }
            polje[i][j] = mineCount;
        }
    }
}

void displayGrid(int polje[10][10]) {
    for (int i = 0; i < 10; i++) {
        for (int j = 0; j < 10; j++) {
            if (polje[i][j] == 10) {
                cout << "ðŸ’£" << "\t";
            } else if (polje[i][j] == 0) {
                cout << "ðŸ”²" << "\t"; 
            } else {
                cout << polje[i][j] << "\t";
            }
        }
        cout << endl;
    }
}

int main() {
    int polje[10][10];

    igra(polje);

    displayGrid(polje);

    return 0;
}

